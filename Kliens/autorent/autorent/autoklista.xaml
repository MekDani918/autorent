        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="23,148,159,110"/>
        <ListBox Margin="27,71,564,326">
            <ListBoxItem Content="-" Height="91"/>

        </ListBox>
        <Menu Margin="0,0,0,408">
